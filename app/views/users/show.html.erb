<!-- ユーザーの詳細 -->
<div class="col-3  mx-auto mt-4 shadow-lg">
  <h3 class"mx-auto"><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

